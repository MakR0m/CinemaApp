<UserControl x:Class="CinemaApp.UI.Views.MoviesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CinemaApp.UI.Views"
             xmlns:vm="clr-namespace:CinemaApp.UI.ViewModels"
             xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:conv="clr-namespace:CinemaApp.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:NullToBoolConverter x:Key="NullToBoolConverter"/>
    </UserControl.Resources>
    
    <behaviors:Interaction.Triggers>
        <behaviors:EventTrigger EventName="Loaded">
            <behaviors:InvokeCommandAction Command="{Binding LoadMovieCommand}"/>
        </behaviors:EventTrigger>
    </behaviors:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0" ItemsSource="{Binding Movies}" SelectedItem="{Binding SelectedMovie}" HorizontalAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Margin="5">
                        <Image Source="{Binding PosterUrl}" Width="100" Height="150">
                            <Image.ToolTip>
                                <StackPanel>
                                    <TextBlock Text="{Binding Tittle}"/>
                                    <TextBlock Text="{Binding Description}"/>
                                    <TextBlock Text="{Binding Duration, StringFormat='Длительность {0} минут'}"/>
                                </StackPanel>
                            </Image.ToolTip>
                        </Image>
                        <TextBlock Text="asdsadasd" FontSize="15"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Добавить" 
                    Command="{Binding AddMovieCommand}"
                    Width="100" Height="20" Margin="5"/>
            <Button Content="Редактировать" Command="{Binding EditMovieCommand}" 
                    CommandParameter="{Binding SelectedMovie, Converter={StaticResource NullToBoolConverter}}"
                    IsEnabled="{Binding SelectedMovie, Converter={StaticResource NullToBoolConverter}}"
                    Width="100" Height="20" Margin="5"/>
            <Button Content="Удалить" Command="{Binding DeleteMovieCommand}" 
                    CommandParameter="{Binding SelectedMovie, Converter={StaticResource NullToBoolConverter}}"
                    IsEnabled="{Binding SelectedMovie, Converter={StaticResource NullToBoolConverter}}"
                    Width="100" Height="20" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
